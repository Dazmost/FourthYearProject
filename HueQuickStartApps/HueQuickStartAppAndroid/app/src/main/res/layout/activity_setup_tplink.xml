<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.philips.lighting.hue.demo.huequickstartapp.SetupTPLinkActivity"
        android:padding="16dp"
        android:background="#ffffff">

        <Button
            android:id="@+id/auth_smartplug_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/auth_smartplug"/>

        <Button
            android:id="@+id/url_smartplug_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/url_smartplug"/>

        <Button
            android:id="@+id/on_smartplug_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/on_smartplug"/>

        <Button
            android:id="@+id/off_smartplug_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/off_smartplug"/>

    </LinearLayout>
</ScrollView>